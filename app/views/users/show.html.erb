<% provide(:title, "#{@user.full_name}") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for(@user, size: 120) %>
        <%= @user.full_name %>
      </h1>
    </section>
  </aside>
    <div class='col-md-8'>
      <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class='microposts'>
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      <% end %>
    </div>
</div>
<% if @user.archived? %>
  <%= link_to "Unarchive my account", unarchive_user_path(@user), method: :patch %>
<% else %>
  <%= link_to "Archive my account", archive_user_path(@user), method: :patch %>
<% end %>
