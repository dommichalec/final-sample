<% provide(:title, "Directory") %>
<h1>Directory of users</h1>

<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.first_name, user_path(user) %>
      <%= link_to "Delete account", user_path(user), method: :delete, class:
      "btn btn-danger" %>
    </li>
  <% end %>
</ul>
<%= will_paginate %>
